{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "filesGlob": [
    "src/**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
